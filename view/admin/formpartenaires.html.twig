{% extends "adminbase.html.twig" %}

{% block body %}
    {%  if list %}
    <div class="admin-form actus">
    <h3>Modification d'un partenaire</h3>
        <form method="post" action="#">
            <p>
                <label for="nom">Nom :</label>
                <input type="text" name="nom" id="nom" value="{{ list.nom }}">
            </p>

            <p>
                <label for="departement">Département :</label>
                <input type="text" name="departement" id="departement" value="{{ list.departement }}">
            </p>

            <p>
                <label for="url">URL :</label>
                <input type="text" name="url" id="url" value="{{ list.url }}">
            </p>

            <p>
                <label for="region">Région :</label>
                <input type="text" name="region" id="region" value="{{ list.region }}">
            </p>

            <p>
                <label for="secteur">Secteur :</label>
                <input type="text" name="secteur" id="secteur" value="{{ list.secteur }}">
            </p>

            <input type="submit" value="Modifier">
        </form>
    </div>
    {% else %}
    <div class="admin-form actus">
    <h3>Ajout d'un partenaire</h3>
        <form method="post" action="#">
            <p>
                <label for="nom">Nom :</label>
                <input type="text" name="nom" id="nom">
            </p>

            <p>
                <label for="departement">Département :</label>
                <input type="text" name="departement" id="departement" >
            </p>

            <p>
                <label for="url">URL :</label>
                <input type="text" name="url" id="url">
            </p>

            <p>
                <label for="region">Région :</label>
                <input type="text" name="region" id="region">
            </p>

            <p>
                <label for="secteur">Secteur :</label>
                <input type="text" name="secteur" id="secteur">
            </p>

            <input type="submit" value="Ajouter">
        </form>
    </div>
    {% endif %}
{% endblock %}