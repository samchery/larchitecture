{% extends "base.html.twig" %}
{% block title %}Commander | L'architecture{% endblock %}
{% block body %}

<div class="titre-section clearfix">
    <hr>
    <h2 class="h2">commander</h2>
</div>

<section class="steps clearfix">
    <div class="first">
        <h3>1ère étape</h3>
        <p>Choix revue</p>
    </div>
    <div class="second active">
        <h3>2e étape</h3>
        <p>Formulaire</p>
    </div>
    <div class="third">
        <h3>3e étape</h3>
        <p>Validation</p>
    </div>
</section>

<section class="form clearfix">
    <label for="nom">Nom<p class="asterix">*</p></label>
    <input type="text" id="nom" name="nom" placeholder="Écrivez ici" required autofocus>

    <label for="prenom">Prénom<p class="asterix">*</p></label>
    <input type="text" id="prenom" name="prenom" required>

    <label for="rs">Raison Sociale</label>
    <input type="text" id="rs" name="rs">

    <label for="act">Activité</label>
    <input type="text" id="act" name="act">

    <label for="pays">Pays<p class="asterix">*</p></label>
    <input type="text" id="pays" name="pays" required>

    <label for="cp">Code postal<p class="asterix">*</p></label>
    <input type="text" id="cp" name="cp" required>

    <label for="ville">Ville<p class="asterix">*</p></label>
    <input type="text" id="ville" name="ville" required>

    <label for="adresse">Adresse<p class="asterix">*</p></label>
    <input type="text" id="adresse" rows=5 name="adresse" required>

    <label for="telephone">Téléphone<p class="asterix">*</p></label>
    <input type="tel" id="telephone" name="telephone" required>

    <label for="email">Adresse e-mail<p class="asterix">*</p></label>
    <input type="email" id="email" name="email" required>

    <label for="email">Vérifiez e-mail<p class="asterix">*</p></label>
    <input type="email" id="email" name="email" required>
    <p>* Champs obligatoire</p>
</section>

<a href="">
    <button class="button-commander" style="vertical-align:middle"><span>Commander</span></button>
</a>

{% endblock %}